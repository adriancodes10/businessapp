

<section class="w-full md:pl-[20%] lg:pl-[15%] px-8 py-16 bg-gray-100 dark:bg-slate-900 xl:px-8">
  <div class="max-w-5xl mx-auto">
    <li class="flex-1 mb-10 hidden ">
      <%= link_to root_path do %>
        <%= image_tag("logo/logo-icon-50x50.png", class:'pr-0 md:pr-3 m-auto', alt: "segura & company logo") %>
      <% end %>
    </li>  
    <div class="flex flex-col items-center md:flex-row">
      <div class="w-full space-y-5 md:w-3/5 md:pr-16">
        <p class="font-medium text-xl text-blue-500 uppercase">Build Your Dream</p>
        <h2 class="text-2xl font-extrabold leading-none text-gray-200 sm:text-3xl md:text-5xl">
            Your project begins here.
        </h2>
        <p class="text-xl text-gray-400 md:pr-16">Create a free account. Enter your project details. Get a free estimate and schedule a date for an initial site assestment. Get the project scheduled and receive progress reports.</p>
      </div>

      <div class="w-full mt-16 md:mt-0 md:w-2/5">
        <div class="relative z-[2] rounded-xl h-auto p-8 py-10 overflow-hidden bg-white border-b-2 border-gray-300 shadow-2xl px-7">
          <h3 class="mb-6 text-2xl font-medium text-center text-gray-400">Sign Up for an account.. Its free.</h3>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
              <%#= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, class:"block w-full px-4 py-3 mb-4 border border-2 border-transparent border-gray-200 focus:ring focus:ring-blue-500 focus:outline-none rounded-xl", autocomplete: "email", placeholder: 'Email address' %>
            </div>

            <div class="flex flex-col">
              <%#= f.label :password %>
              <%= f.password_field :password, autocomplete: "new-password", class:"block w-full px-4 py-3 mb-4 border border-2 border-transparent border-gray-200 focus:ring focus:ring-blue-500 focus:outline-none rounded-xl", placeholder: "New Password" %>
              <% if @minimum_password_length %>
              <em class="text-blue-500 m-auto ">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
            </div>

            <div class="field">
              <%# f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"block w-full px-4 py-3 mb-4 border border-2 border-transparent border-gray-200 focus:ring focus:ring-blue-500 focus:outline-none rounded-xl", placeholder: "Confirm Password" %>
            </div>

            <div class="actions">
              <%= f.submit "Sign up", class:"w-full px-3 py-4 font-medium text-white bg-blue-600 rounded-xl" %>
            </div>
          <% end %>          
        </div>
      </div>
    </div>
  </div>
</section>
<%= render "devise/shared/links" %>
