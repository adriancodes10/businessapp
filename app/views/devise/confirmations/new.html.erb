<section class="w-full md:pl-[20%] lg:pl-[15%] px-8 py-16 bg-gray-400 dark:bg-slate-900 xl:px-8">
<h2 class="text-center mt-8 mb-4 text-slate-200 dark:text-slate-400">Resend confirmation instructions</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field text-center">
    <%#= f.label :email, class:"text-slate-200 dark:text-slate-400" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"email", class:"rounded-lg text-gray-900", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
  </div>

  <div class="actions flex flex-col justify-center">
    <%= f.submit "Resend confirmation instructions", class:" w-auto self-center px-3 py-4 font-medium text-slate-200 dark:text-slate-400 bg-blue-600 rounded-xl mt-4" %>
  </div>
<% end %>

</section>
<%= render "devise/shared/links" %>