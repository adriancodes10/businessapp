<h2 class="text-center mt-8 mb-4 text-slate-200 dark:text-slate-400"> Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field text-center">
    <%= f.label :email, class:"text-slate-200 dark:text-slate-400" %><br />
    <%= f.email_field :email, class:"text-gray-900 rounded-lg", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions flex flex-col justify-center">
    <%= f.submit "Send me reset password instructions", class:"text-gray-900 w-auto self-center px-3 py-4 font-medium text-slate-200 dark:text-slate-400 bg-blue-600 rounded-xl mt-4" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
