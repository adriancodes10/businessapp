
<div class="md:pl-[20%] lg:pl-[15%] pt-16 px-6 flex flex-col items-center justify-center overflow-hidden top-cont container-fluid py-5">
  <div class="w-full space-y-5 md:w-3/5 md:pr-16 text-center">
    <p class="font-medium text-xl text-blue-500 uppercase">Current Positions</p>
    <h2 class="text-xl font-extrabold leading-none text-gray-200 sm:text-2xl md:text-3xl">
      Crew member Construction/Landscaping
    </h2>
    <p class="text-xl text-gray-300 dark:text-gray-200 md:pr-16"><span class="subtitle">location: </span>Hot Springs</p>
  </div>
  <div class="wrapper">
    <div class="card card--19">
      <div class="card__header card__header--19">
        <div class="card__watermark" data-watermark="Team"></div>

        <img src="<%= asset_path 'favicon.ico' %>" alt="Nike" class="card__logo card__will-animate">

        <span class="card__price card__will-animate">$10-$14</span>

        <h1 class="card__title card__will-animate">Part time </h1>
        <span class="card__subtitle card__will-animate">
          <table>
          <tr><td>Learn on the job</td></tr>
          <tr><td> 8- 30 hours/week </td></tr>
          <tr><td>Flexible schedule</td></tr>
          </table>
        </span>

        </div>

      <div class="card__body">
        
        <img src="<%= asset_path 'no-bg-elements/sign-men-working-nobg.png' %>" alt="Workers" class="card__image apply-image-1 card__will-animate">
        <div class="card__wish-list card__wish-list--19 card__will-animate" data-position="part-time" onclick="toggleForm(this.getAttribute('data-position'))">Apply</div>

       
      </div>
    </div>

    <!-- Nike Solstice -->
    <div class="card card--solstice">
      <div class="card__header card__header--solstice">
        <div class="card__watermark" data-watermark="Work"></div>

        <img src="<%= asset_path 'favicon.ico' %>" alt="Nike" class="card__logo card__will-animate">

        <span class="card__price card__will-animate">$12-16$</span>

        <h1 class="card__title card__will-animate">full-time position</h1>
        <span class="card__subtitle card__will-animate">
          <table>
          <tr><td>Consistent and regular work schedule</td></tr>
          <tr><td>Custom Work Gear</td></tr>
          <tr><td>Start working immediately</td></tr>
          </table>
        </span>

      </div>

      <div class="card__body">
      
        <img src="<%= asset_path 'no-bg-elements/worker-jackhammer-nobg.png' %>" alt="Nike Solstice" class="card__image apply-image-2 card__will-animate">
        <div class="card__wish-list card__wish-list--solstice card__will-animate" data-position="full-time" onclick="toggleForm(this.getAttribute('data-position'))" >get started</div>
      </div>
    </div>

          <!-- Nike Huarache -->
    <div class="card card--huarache">
      <div class="card__header card__header--huarache">
        <div class="card__watermark" data-watermark="$$$"></div>

