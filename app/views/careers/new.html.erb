          <%# alterante header for form %>
          <%# form_with(model:[ @user, project], local: true) do |f| %>
    <%= form_for @candidate, class:"border border-2 border-gray-400 text-gray-900", url: '/careers#create' do |f| %>
      <% if @candidate.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@candidate.errors.count, "error") %> prohibited this project from being created</h2>

          <ul>
            <% @candidate.errors.each do |error|%>
              <li><%= error.full_message %></li>
            <%end%>
          </ul>
        </div>
      <%end%>

      <div class="field">
        <%= f.label :position_applying_for %><br />
        <%# f.select :position, autofocus: true, autocomplete: "position" %>
        <%= f.select(:position, ['full-time', 'part-time', 'seasonal'], {}, { :class => 'position-field block w-full px-4 py-3 h-[40px] border border-2 border-transparent border-gray-200 focus:ring focus:ring-blue-500 focus:outline-none rounded-xl text-gray-900'}) %>
      </div>

    

        <div class="field">
        <%#= f.label :name, "Your preferred Name:" %> <br />
        <%= f.text_field :name, autocomplete: "name", placeholder:"your name", class:"text-gray-900 block w-full px-4 py-3 mb-4 border border-2 border-transparent border-gray-200 focus:ring focus:ring-blue-500 focus:outline-none rounded-xl" %>
      </div>


      
      <div class="field">
        <%#= f.label :phone_number %> <br />
        <%= f.text_field :phone_number, autocomplete: "phone number", class:"block w-full px-4 py-3 mb-4 border border-2 border-transparent border-gray-200 focus:ring focus:ring-blue-500 focus:outline-none rounded-xl text-gray-900", placeholder: "phone number" %>
      </div>

      <div class="field" >
        <%= f.label :age, "What is your age:"%>
        <br>
        <%= f.number_field :age, value: '18', class:"block w-full px-4 py-3 mb-4 border border-2 border-transparent border-gray-200 focus:ring focus:ring-blue-500 focus:outline-none rounded-xl text-gray-900" %>
      </div>
        <div class="field">
        <%#= f.label :current_address %>
        <i >( street number, street name, apt # if applicable )</i>
        <%= f.text_field :address, required: true, class:"block w-full px-4 py-3 mb-4 border border-2 border-transparent border-gray-200 focus:ring focus:ring-blue-500 focus:outline-none rounded-xl text-gray-900", placeholder:"current address" %>
      </div>

        <div class="field">
        <%= f.label :address_zip_code%>
        <br>
        <%= f.number_field :zip_code, value:'71901', class:"block w-full px-4 py-3 mb-4 border border-2 border-transparent border-gray-200 focus:ring focus:ring-blue-500 focus:outline-none rounded-xl text-gray-900" %>
      </div>


      <div class="actions mt-3 flex justify-center">
        <%= f.submit "Submit", class:"w-2/5 self-center px-3 py-4 font-medium text-gray-700 bg-gray-100 rounded-xl mt-6 text-gray-900" %>
      </div>
    <% end %>
  </div>
  </div>
  <%= link_to 'Back', :back, class:"px-3 py-4 font-medium text-white bg-blue-600 rounded-xl w-[5rem] text-center mt-20"  %>
</div>
